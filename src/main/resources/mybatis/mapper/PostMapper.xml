<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.eop.spring.mvc.mybatis.mapper.PostMapper">

	<insert id="insertPost" parameterType="Post" useGeneratedKeys="true" keyColumn="id" keyProperty="id" statementType="PREPARED">
		insert into post (title,content,pub_time,blog_id)
		values(#{title},#{content},#{publishTime},#{blogId})
	</insert>
  	
  	<update id="updatePost" parameterType="Post">
  		update post
  		<set>
  			<if test="title != null and title != ''">title = #{title},</if>
  			<if test="content != null and content != ''">content = #{content}</if>
  		</set>
  		where id = #{id}
  	</update>
  	
  	<delete id="deletePost" parameterType="long">
  		delete from post where id = #{id}
  	</delete>
  	
  	<select id="selectPost" parameterType="long" resultType="Post">
  		select id,title,content,pub_time publishTime,blog_id blogId from post where id = #{id}
  	</select>
  	
  	<select id="selectPostsByBlog" parameterType="long" resultType="Post">
  		select id,title,content,pub_time publishTime,blog_id blogId from post where blog_id = #{blogId}
  	</select>
  	
  	<select id="selectPosts" resultType="Post">
  		select id,title,content,pub_time publishTime,blog_id blogId from post
  	</select>
</mapper>