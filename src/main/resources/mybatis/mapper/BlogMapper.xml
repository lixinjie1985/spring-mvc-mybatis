<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.eop.spring.mvc.mybatis.mapper.BlogMapper">

	<insert id="insertBlog" parameterType="Blog" useGeneratedKeys="true" keyColumn="id" keyProperty="id" statementType="PREPARED">
		insert into blog (name,path,open_time,user_id)
		values(#{name},#{path},#{open_time},#{userId})
	</insert>
  	
  	<update id="updateBlog" parameterType="Blog">
  		update user
  		<set>
  			<if test="name != null and name != ''">name = #{name},</if>
  			<if test="path != null and path != ''">path = #{path},</if>
  		</set>
  		where id = #{id}
  	</update>
  	
  	<delete id="deleteBlog" parameterType="long">
  		delete from blog where id = #{id}
  	</delete>
  	
  	<select id="selectBlog" parameterType="long" resultType="Blog">
  		select id,name,path,open_time openTime,user_id userId from blog where id = #{id}
  	</select>
  	
  	<select id="selectBlogByUser" parameterType="long" resultType="Blog">
  		select id,name,path,open_time openTime,user_id userId from blog where user_id = #{userId}
  	</select>
  	
  	<select id="selectBlogs" resultType="Blog">
  		select id,name,path,open_time openTime,user_id userId from blog
  	</select>
</mapper>