<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.eop.spring.mvc.mybatis.mapper.CommentMapper">

	<insert id="insertComment" parameterType="Comment" useGeneratedKeys="true" keyColumn="id" keyProperty="id" statementType="PREPARED">
		insert into comment (content,comment_time,post_id,user_id)
		values(#{content},#{commentTime},#{postId},#{userId})
	</insert>
  	
  	<update id="updateComment" parameterType="Comment">
  		update user
  		<set>
  			<if test="content != null and content != ''">content = #{content}</if>
  		</set>
  		where id = #{id}
  	</update>
  	
  	<delete id="deleteComment" parameterType="long">
  		delete from comment where id = #{id}
  	</delete>
  	
  	<select id="selectComment" parameterType="long" resultType="Comment">
  		select id,content,comment_time commentTime,post_id postId,user_id userId from comment where id = #{id}
  	</select>
  	
  	<select id="selectCommentsByPost" parameterType="long" resultType="Comment">
  		select id,content,comment_time commentTime,post_id postId,user_id userId from comment where post_id = #{postId}
  	</select>
  	
  	<select id="selectCommentsByUser" parameterType="long" resultType="Comment">
  		select id,content,comment_time commentTime,post_id postId,user_id userId from comment where user_id = #{userId}
  	</select>
  	
  	<select id="selectComments" resultType="Comment">
  		select id,content,comment_time commentTime,post_id postId,user_id userId from comment
  	</select>
</mapper>